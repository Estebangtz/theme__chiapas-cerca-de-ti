<div>
    <div class="profile">
        <div> <img src="{{ section.settings.user_img | image_url: 200x }} 200" width="200" height="200"></div>       

        <h3 style="color:blue;">{{ section.settings.user_name }}</h3>

        <p>
            {{ section.settings.user_bio }}
        </p>
    </div>    
</div>

{% schema %}
    {
      "name": "Profile",
      "tag": "section",
      "class": "profile",
      "settings": [
        {
        "type": "image_picker",
        "id": "user_img",
        "label": "User Photo"
        },  
        {
        "type": "text",
        "id": "user_name",
        "label": "User Name",
        "default": "Add user name"
        },
        {
        "type": "richtext",
        "id": "user_bio",
        "label": "User Biographia",
        "default": "Add personal description"
        }
  ],
      "presets": [
            {
            "category": "Profile",
            "name": "User Profile"
            }
        ]
    }
{% endschema %}